<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".StatisticActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/learnt_value"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="276dp"
            android:text="@string/defaultValueAmount"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.797"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stat_learnt"
            android:layout_width="177dp"
            android:layout_height="35dp"
            android:layout_marginBottom="276dp"
            android:text="@string/nauczone"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/to_learning_value"
            android:layout_width="101dp"
            android:layout_height="42dp"
            android:layout_marginBottom="368dp"
            android:text="@string/defaultValueAmount"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.796"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stat_learning"
            android:layout_width="182dp"
            android:layout_height="42dp"
            android:layout_marginBottom="368dp"
            android:text="@string/w_trakcie_nauki"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.174"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/to_learn_value"
            android:layout_width="97dp"
            android:layout_height="39dp"
            android:layout_marginBottom="464dp"
            android:text="@string/defaultValueAmount"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.799"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stat_to_learn"
            android:layout_width="180dp"
            android:layout_height="43dp"
            android:layout_marginBottom="464dp"
            android:text="@string/do_nauczenia"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>