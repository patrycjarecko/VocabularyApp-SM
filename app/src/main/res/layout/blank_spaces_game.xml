<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/word_to_translate_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word_to_translate" />

    <TextView
        android:id="@+id/blank_spaces_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:id="@+id/answer_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        />

    <Space
        android:layout_width="300dp"
        android:layout_height="300dp" />
    <Button
        android:id="@+id/back_to_category_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_category" />

</LinearLayout>